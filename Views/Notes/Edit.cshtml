@model Notebox.Models.Note

@{
    ViewData["Title"] = "Edit";
}

<div class="row edit hidden">
    <div>
        <a class="text-black" asp-action="Index" style="text-decoration:none;"><i class="fa-solid fa-arrow-left "></i> Go Back</a>
    </div>
    <div class="col-lg-12 d-flex justify-content-center mt-4">
        <div class="card card-edit border-warning">
            <div class="card-body">
                <h5 class="card-title">Edit</h5>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group pb-2">
                        <label asp-for="UserId" class="control-label"></label>
                        <input asp-for="UserId" class="form-control" readonly />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group pb-2">
                        <label asp-for="NoteTitle" class="control-label"></label>
                        <input asp-for="NoteTitle" class="form-control" />
                        <span asp-validation-for="NoteTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group pb-4">
                        <label asp-for="NoteContent" class="control-label"></label>
                        <textarea asp-for="NoteContent" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="NoteContent" class="text-danger"></span>
                    </div>
                    <div class="form-group pb-4 text-center">
                        <input type="submit" value="Edit" class="btn btn-outline-warning" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
