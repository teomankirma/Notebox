@{
    ViewData["Title"] = "Search";
}

<div class="row search hidden">
    <a class="text-black" asp-action="Index" style="text-decoration:none;"><i class="fa-solid fa-arrow-left "></i> Go Back</a>
    <div class="col-lg-12 d-flex justify-content-center mt-4">
        <div class="card border-primary card-search">
            <div class="card-body">
                <h4>Search for a Note</h4>
                <form asp-action="ShowSearchResults">
                    <div class="form-group py-4">
                        <label for="SearchTerm" class="control-label">Enter a search term:</label>
                        <input name="SearchTerm" class="form-control" />
                    </div>
                    <div class="form-group py-4 text-center">
                        <button type="submit" class="btn btn-lg btn-outline-primary">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
