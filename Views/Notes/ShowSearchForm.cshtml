<div class="row search hidden">
    <h4>Search for a Note</h4>
    <hr />
    <div class="col-lg-4">
        <form asp-action="ShowSearchResults">
            <div class="form-group pb-4">
                <label for="SearchTerm" class="control-label"></label>
                <input name="SearchTerm" class="form-control" />
            </div>
            <div class="form-group text-center pb-4">
                <input type="submit" value="Search" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
    <div>
        <a class="text-black" asp-action="Index" style="text-decoration:none;"><i class="fa-solid fa-arrow-left "></i> Go Back</a>
    </div>
</div>