@model Notebox.Models.Note

@{
    ViewData["Title"] = "Delete";
}

<div class="delete hidden">
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="row pb-4">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoteTitle)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.NoteTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoteContent)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.NoteContent)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a class="text-black" asp-action="Index" style="text-decoration:none;"><i class="fa-solid fa-arrow-left "></i> Go Back</a>
    </form>
</div>
