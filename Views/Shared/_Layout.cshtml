<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notebox</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Notebox.styles.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#6E0C7C">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/notebox-navbar.png" alt="Logo" width="130" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-link-navbar" asp-area="" asp-controller="Home" asp-action="Index" >
                                <i class="fa-solid fa-house fa-beat"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-navbar" asp-area="" asp-controller="Notes" asp-action="Index">
                                <i class="fa-solid fa-note-sticky fa-beat"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-navbar" asp-area="" asp-controller="Notes" asp-action="ShowSearchForm">
                                <i class="fa-solid fa-magnifying-glass fa-beat"></i>
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="text-center fixed-bottom pt-3 pb-1 bg-dark text-white" ng-app="notebox" ng-controller="noteboxController">
        <p>Current Day and Time: {{ CurrentDate | date:'dd/MM/yyyy HH:mm:ss'}}</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/38a6783db2.js" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
